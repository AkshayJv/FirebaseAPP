<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshaysa.realtimedatabase.AddTrackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textviewArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


        <EditText
            android:id="@+id/editTextTrackName"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_margin="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:hint="Enter Track Name" />

        <SeekBar
            android:id="@+id/seekBarRating"
            android:layout_width="279dp"

            android:layout_height="match_parent"
            android:max="5" />

        <Button
            android:id="@+id/buttonAddTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="ADD ARTIST"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="121dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TRACKS"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <ListView
            android:id="@+id/listviewTracks"
            android:layout_width="368dp"
            android:layout_height="289dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="214dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
